{
    "name": "simulation",
    "version": "1.0.0",
    "scripts": {
        "cy:open": "cypress open",
        "cy:run": "wait-on http://localhost:3000/ && cypress run --config-file cypress.json",
        "lint:eslint": "eslint . --fix --format html --output-file ./dist/reports/lint/eslint-report.html --ignore-path ./.gitignore",
        "lint:eslint:json": "eslint . --fix --format json --output-file ./dist/reports/lint/eslint-report.json --ignore-path ./.gitignore",
        "lint:stylelint": "stylelint \"**/*.{css,scss,sass}\" --fix --formatter json > ./dist/reports/lint/stylelint-report.json --ignore-path ./.gitignore",
        "prettier": "prettier --write . --ignore-path ./.gitignore",
        "test": "npm-run-all -p start cy:run",
        "clean": "npm run prettier & npm run lint:eslint & npx standard --fix & npm audit fix --dry-run & npm run test",
        "duplication": "npx jscpd ./src -c ./jscpd.json",
        "complexity": "npx cognitive-complexity-ts-json ./src > complexity.json"
    },
    "devDependencies": {
        "@cypress/code-coverage": "^3.9.12",
        "@testing-library/jest-dom": "^5.15.0",
        "@testing-library/react": "^12.1.2",
        "cypress": "^9.1.0",
        "cypress-movie": "^3.0.20",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-cypress": "^2.11.2",
        "eslint-plugin-jest": "^24.7.0",
        "eslint-plugin-jest-react": "^0.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-react-perf": "^3.3.0",
        "eslint-plugin-typescript-sort-keys": "^1.5.0",
        "jscpd": "^3.4.2",
        "prettier": "^2.5.1",
        "typescript": "^4.5.2"
    },
    "_id": "simulation@1.0.0"
}
